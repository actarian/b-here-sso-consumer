<% layout('_layout') -%>
<div class="container">
	<h1>BHere SSO Consumer</h1>
	<p>
		<a href="/reserved-area">Reserved Area</a>
		<button type="button" data-login="<%= login %>" data-title="SSO Login">SSO Login</button>
	</p>
</div>
<script>
function onPopupClose(status) {
	if (status === 'success') {
		alert('Login Successful');
		window.location.href = '/reserved-area';
	} else {
		alert('Login Failed');
	}
}

function doLogin(event) {
	window.open(event.currentTarget.dataset.login, event.currentTarget.dataset.title, 'left=20,top=20,width=600,height=600,toolbar=1,resizable=0');
	event.preventDefault();
	return false;
}

var login = document.querySelector('[data-login]');
if (login) {
	login.addEventListener('click', doLogin);
}

</script>
